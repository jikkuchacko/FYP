@{
    Login curUser = Context.Session.GetObject<Login>("associate_lecturer");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FYP</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/lib/moment/min/moment.min.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>

    <style>
        .input-group-addon {
            cursor: pointer;
        }

        #BsDateTimePicker {
            cursor: pointer;
        }
    </style>
    <script type="text/javascript">
      $(function () {
         $('#BsDateTimePicker').datetimepicker({
            format: 'YYYY-MM-DD'
         });
      });
    </script>
    <script src="~/lib/jquery-validation/src/core.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    <div class="row">
        <div class="col-sm-2">

            @if (curUser != null && curUser.type == 0)
            {
                <img src="~/images/Al.png" style="width:90%;height:90%" />
            }
            else if (curUser != null && curUser.type == 1)
            {
                <img src="~/images/ORG.png" style="width:90%;height:90%" />
            }
                @if (curUser != null)
                { 
                <h4 class="text-center text-primary">
                    Welcome @curUser.al_name
                </h4>
                <h4 class="text-center text-primary">
                    <a asp-action="Logout">Logout</a>
                </h4>
            }
        </div>
        <div class="col-sm-10">
            <div class="row">
                <nav class="navbar navbar-default" role="navigation">
                    <div>

                        <ul class="nav navbar-nav">

                            @if (curUser != null && curUser.type == 0)
                            {
                               
                                <li class="active">
                                    <a asp-action="home">Home</a>
                                </li>
                                <li class="active">
                                    <a asp-action="IndicateAvailability">Indicate Availability</a>
                                </li>
                                <li class="active">
                                    <a asp-action="ViewAllocation">View Allocation</a>
                                </li>
                                <li class="active">
                                    <a asp-action="MaintainDetails">Maintain Details</a>
                                </li>
                            }
                            else if (curUser != null && curUser.type == 1)
                            {
                                <li class="active">
                                    <a asp-action="home">Home</a>
                                </li>
                                <li class="active">
                                    <a asp-action="InvTimeslot"> Setup Invigilation Timeslot</a>
                                </li>
                                <li class="active">
                                    <a asp-action="SendTimeslot">Send Available Timeslot</a>
                                </li>
                                <li class="active">
                                    <a asp-action="ViewStatus">View Ind.status of AL</a>
                                </li>
                                <li class="active">
                                    <a asp-action="SendEmail">Send Confirmation Email </a>
                                </li>
                                <li class="active">
                                    <a asp-action="GenerateExcel">Generate Excel Sheet</a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>

                <div class="container body-content col-sm-8">
                    @RenderBody()
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </div>

</body>
</html>

